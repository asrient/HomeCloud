{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
      "lib": ["esnext"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "types": ["node"]
  },
  "include": ["./**/**.ts"]
}