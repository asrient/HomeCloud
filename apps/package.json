{
  "name": "homecloud",
  "productName": "Homecloud Desktop",
  "main": "bin/desktop/index.js",
  "version": "1.0.0",
  "private": true,
  "description": "App for all your online and local storages",
  "author": {
    "name": "asrient",
    "email": "44570278+asrient@users.noreply.github.com"
  },
  "scripts": {
    "dev": "vite",
    "build:node": "vite build --config vite.node.config.ts",
    "build:desktop": "LIB_NAME=desktopMain vite build --config vite.desktop.config.ts && LIB_NAME=desktopPreload vite build --config vite.desktop.config.ts",
    "build": "tsc && npm run build:desktop && npm run build:node",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "start:desktop": "npm run build && electron-forge start",
    "package:desktop": "npm run build && electron-forge package",
    "make:desktop": "npm run build && electron-forge make",
    "publish:desktop": "npm run build && electron-forge publish"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0"
  },
  "desktopDependencies": [
    "electron-squirrel-startup",
    "electron-is-dev"
  ],
  "devDependencies": {
    "prettier": "latest",
    "typescript": "^4.7.4",
    "vite": "^4.1.1",
    "@electron-forge/cli": "^6.4.0",
    "@electron-forge/maker-deb": "^6.4.0",
    "@electron-forge/maker-rpm": "^6.4.0",
    "@electron-forge/maker-squirrel": "^6.4.0",
    "@electron-forge/maker-zip": "^6.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^6.4.0",
    "electron": "26.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}